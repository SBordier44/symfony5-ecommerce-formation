<h1>Bravo pour votre commande n°{{ purchase.id }}</h1>

<p>Merci à vous {{ purchase.owner.fullName }}</p>

<table>
    <thead>
    <tr>
        <th>Produit</th>
        <th>Quantité</th>
        <th>P.U.</th>
        <th>Total</th>
    </tr>
    </thead>
    <tbody>
    {% for item in purchase.purchaseItems %}
        <tr>
            <td>{{ item.productName }}</td>
            <td>{{ item.quantity }}</td>
            <td>{{ item.productPrice / 100 }} €</td>
            <td>{{ item.total / 100 }} €</td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <td colspan="3">Total :</td>
        <td>{{ purchase.total / 100 }} €</td>
    </tr>
    </tfoot>
</table>
